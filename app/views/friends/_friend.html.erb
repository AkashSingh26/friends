<div id="<%= dom_id friend %>">

 <div class="container-fluid bg-dark text-light p-5">

  <h1 class="display-4">
    <%= friend.first_name %>
    <%= friend.last_name %></h1>
  <p class="lead">
    <%= friend.email %>
    <%= friend.phone %>
    <%= friend.twitter %>

  </p>
  <hr class="my-4">
  

   <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-primary" %> |

    <%= link_to "Back to friends", friends_path, class: "btn btn-secondary" %>
    <br>
  <p><%= button_to "Destroy this friend", @friend, method: :delete, class: "btn btn-danger" %></p>
</div>

 