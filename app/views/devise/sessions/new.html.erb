

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="card">
  <div class="card-body">
    <h2>Log in</h2>
    <p><div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :class => 'form-control', autocomplete: "email" %>
  </div>
  <p>
  <div class="field form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, :class => 'form-control', autocomplete: "current-password" %>
  </div>
  </p>
  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
     <p> <%= f.check_box :remember_me, :class => 'form-check-input' %>
      <%= f.label :remember_me %><p>
    </div>
</p>

    <% end %>

  <div class="actions">
    <%= f.submit "Log in", :class =>'btn btn-secondary' %>
  </div>
<% end %>
<br/>

<%= render "devise/shared/links" %>
